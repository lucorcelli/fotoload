{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "seed.ts",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
