  <h1>üì¶ Cadastrar Produto</h1>
  <form onsubmit="enviarProduto(event)">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" required />

    <label for="descricao">Descri√ß√£o:</label>
    <textarea id="descricao" rows="3" required></textarea>

    <label for="referencia">Refer√™ncia de F√°brica:</label>
    <input type="text" id="referencia" />

    <label for="codigo">C√≥digo de Barras:</label>
    <input type="text" id="codigo" />

    <label for="usuario_id">ID do Usu√°rio:</label>
    <input type="number" id="usuario_id" required />

    <label for="categoria_id">ID da Categoria:</label>
    <input type="number" id="categoria_id" required />

    <label>Fotos (URLs - at√© 6):</label>
    <div class="fotos">
      <input type="text" class="foto" placeholder="URL da foto 1" />
      <input type="text" class="foto" placeholder="URL da foto 2" />
      <input type="text" class="foto" placeholder="URL da foto 3" />
      <input type="text" class="foto" placeholder="URL da foto 4" />
      <input type="text" class="foto" placeholder="URL da foto 5" />
      <input type="text" class="foto" placeholder="URL da foto 6" />
    </div>

    <button type="submit">Cadastrar Produto</button>
  </form>

  <div class="msg" id="msg"></div>

  <script>
    function enviarProduto(e) {
      e.preventDefault();

      const fotos = Array.from(document.querySelectorAll('.foto'))
        .map(input => input.value.trim())
        .filter(url => url !== '');

      const dados = {
        nome: document.getElementById('nome').value,
        descricao: document.getElementById('descricao').value,
        referencia_fabrica: document.getElementById('referencia').value,
        codigo_barras: document.getElementById('codigo').value,
        usuario_id: Number(document.getElementById('usuario_id').value),
        categoria_id: Number(document.getElementById('categoria_id').value),
        fotos
      };

      if (!dados.referencia_fabrica && !dados.codigo_barras) {
        document.getElementById('msg').innerText =
          '‚ùå Informe refer√™ncia de f√°brica ou c√≥digo de barras.';
        return;
      }

      if (fotos.length === 0) {
        document.getElementById('msg').innerText =
          '‚ùå Pelo menos uma foto √© obrigat√≥ria.';
        return;
      }

      if (fotos.length > 6) {
        document.getElementById('msg').innerText =
          '‚ùå M√°ximo de 6 fotos por produto.';
        return;
      }

      fetch('https://fotoload-api.onrender.com/produtos', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(dados)
      })
        .then(res => {
          if (!res.ok) throw new Error(`Erro HTTP: ${res.status}`);
          return res.json();
        })
        .then(resp => {
          document.getElementById('msg').innerText =
            `‚úÖ Produto cadastrado com sucesso! ID: ${resp.produto.id}`;
        })
        .catch(err => {
          console.error('Erro ao cadastrar produto:', err);
          document.getElementById('msg').innerText =
            '‚ùå Erro ao cadastrar produto.';
        });
    }
  </script>
